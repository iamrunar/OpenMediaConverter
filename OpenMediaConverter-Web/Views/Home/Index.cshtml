@{
    ViewData["Title"] = "Home Page";
}
<h2>@ViewData["message"]</h2>
<p>
    Hello, my friends! <br />
    <a asp-action="Convert">Convert me</a> <br />
    <div>
        Progress: <div id="progressValueContainer" />
    </div>
    <div>
        Result error: <div id="errorTextContainer" />
    </div>
    <div>
        Result link: <a id="linkToFile" />
    </div>

</p>

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UploadFile">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload">
        </div>
    </div>
</form>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/convertFile.js"></script>